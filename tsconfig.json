{
    "compilerOptions": {
      "baseUrl": "src",
      "outDir": "dist",
      "sourceMap": false,
      "target": "es2016",
      "useDefineForClassFields": false,
      "module": "esnext",
      "moduleResolution": "node",
      "allowJs": false,
      "strict": true,
      "noUnusedLocals": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "removeComments": false,
      "jsx": "preserve",
      "lib": ["esnext", "dom"],
      "rootDir": ".",
      "skipLibCheck": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "typedocOptions": {
      "mode": "file",
      "out": "./website/docs/api",
      "plugin": ["typedoc-plugin-markdown"],
      "exclude": [
        "**/renderer/**",
        "**/utils/**",
        "**/widgets/**/index.ts",
        "**/widgets/config.ts",
        "**/widgets/nativeWidget.ts",
        "**/widgets/widgetMap.ts",
        "vueLoader.ts",
        "index.ts"
      ],
      "excludeExternals": true,
      "excludeNotExported": true,
      "excludePrivate": true,
      "excludeProtected": true,
      "includeDeclarations": true,
      "hideBreadcrumbs": true,
      "hideSources": true,
      "theme": "docusaurus2",
      "stripInternal": true
    }
}