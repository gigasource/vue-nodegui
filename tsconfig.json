{
    "compilerOptions": {
        "lib": [
            "es2015",
            "dom"
        ],
        "target": "es2015",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": "src",
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ],
    "typedocOptions": {
      "mode": "file",
      "out": "./website/docs/api",
      "plugin": ["typedoc-plugin-markdown"],
      "exclude": [
        "**/renderer/**",
        "**/utils/**",
        "**/widgets/**/index.ts",
        "**/widgets/config.ts",
        "**/widgets/nativeWidget.ts",
        "**/widgets/widgetMap.ts",
        "vueLoader.ts",
        "index.ts"
      ],
      "excludeExternals": true,
      "excludeNotExported": true,
      "excludePrivate": true,
      "excludeProtected": true,
      "includeDeclarations": true,
      "hideBreadcrumbs": true,
      "hideSources": true,
      "theme": "docusaurus2",
      "stripInternal": true
    }
}